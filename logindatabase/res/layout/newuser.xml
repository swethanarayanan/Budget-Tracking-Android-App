<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:weightSum="1">
    <TextView android:id="@+id/Signup" android:layout_height="wrap_content" android:text="Sign Up Form" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:paddingTop="10pt" android:paddingLeft="38pt" android:paddingBottom="10pt"></TextView>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout1">
        <TextView android:id="@+id/Firstname" android:layout_height="wrap_content" android:text="First Name" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_weight="0.07"></TextView>
        <EditText android:id="@+id/firstname" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:inputType="textPersonName">
            <requestFocus></requestFocus>
        </EditText>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout2">
        <TextView android:id="@+id/Lastname" android:layout_height="wrap_content" android:text="Last Name" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_weight="0.08"></TextView>
        <EditText android:id="@+id/lastname" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content"></EditText>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout3">
        <TextView android:id="@+id/Username2" android:layout_height="wrap_content" android:text="UserName" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_weight="0.08"></TextView>
        <EditText android:id="@+id/username2" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content"></EditText>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout4">
        <TextView android:id="@+id/Password2" android:layout_height="wrap_content" android:text="Password" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_weight="0.11"></TextView>
        <EditText android:id="@+id/password2" android:layout_height="wrap_content" android:layout_width="wrap_content" android:inputType="textPassword" android:layout_weight="0.89"></EditText>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout5">
        <TextView android:id="@+id/Email1" android:text="E-mail address" android:layout_width="102dp" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_height="match_parent"></TextView>
        <EditText android:id="@+id/email1" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:inputType="textEmailAddress"></EditText>
    </LinearLayout>
    <Button android:text="Sign Up" android:layout_width="fill_parent" android:id="@+id/signup2" android:layout_height="wrap_content" android:layout_marginTop="15pt" ></Button>
   
    
</LinearLayout>
