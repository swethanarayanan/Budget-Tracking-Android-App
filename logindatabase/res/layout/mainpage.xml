<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:id="@+id/Heading" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textAppearance="?android:attr/textAppearanceLarge" android:text="Virtual Wallet" android:paddingLeft="40pt" android:paddingTop="8pt" android:paddingBottom="8pt"></TextView>
    <EditText android:id="@+id/welcome" android:layout_width="fill_parent" android:background="@android:color/transparent" android:textColor="@android:color/white"  android:layout_height="38dp"/>
    <Button android:text="About"   android:id="@+id/button1" android:layout_width="fill_parent" android:layout_height="wrap_content" ></Button>
    <Button android:text="Add a budget"   android:id="@+id/button2" android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
    <Button android:text="Add expenses "  android:id="@+id/button3" android:layout_width="fill_parent" android:layout_height="wrap_content" ></Button>
    <Button android:text="View Expenses" android:id="@+id/button4"   android:layout_width="fill_parent" android:layout_height="wrap_content" ></Button>
    <Button android:text="View Money Remaining" android:id="@+id/button5"   android:layout_width="fill_parent" android:layout_height="wrap_content" ></Button>
    <Button android:text="View Bonus points" android:id="@+id/button6"   android:layout_width="fill_parent" android:layout_height="wrap_content" ></Button>
    <Button android:text="Email your expenses" android:id="@+id/button8" android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
    <Button android:id="@+id/button7" android:layout_width="fill_parent" android:text="Log Out" android:layout_height="wrap_content"></Button>
    
</LinearLayout>
